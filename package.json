{
  "name": "codegpt",
  "displayName": "CodeGPT",
  "description": "Productive coding with the power of ChatGPT",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "menus": {
    "editor/context": [
      {
        "command": "chatgpt.explain",
        "when": "editorHasSelection",
        "group": "chatgpt-menu-group@1"
      }
    ],
    "commandPalette": [
      {
        "command": "chatgpt.explain",
        "when": "editorHasSelection"
      }
    ]
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "chatgpt.explain",
        "title": "ChatGPT: Explain selection"
      },
      {
        "command": "chatgpt.apikey",
        "title": "ChatGPT: Setup OpenAI API key"
      },
      {
        "command": "chatgpt.refresh",
        "title": "ChatGPT: Refresh"
      },
      {
        "command": "chatgpt.askgpt",
        "title": "ChatGPT: Ask GPT"
      }
    ],
    "configuration": {
      "title": "chatGPT",
      "type": "object",
      "properties": {
        "chatgpt.sessionToken": {
          "type": "string",
          "description": "A session token you get when logged into chat.openai.com",
          "order": 1
        },
        "chatgpt.promptPrefix.explain": {
          "type": "string",
          "default": "Explain what this code does: ",
          "description": "The prompt prefix used for explaining the selected code",
          "order": 3
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vscode/test-electron": "^2.2.2",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "chatgpt": "^4.7.2"
  }
}
